@model Mobile

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mobile</h4>
    <hr />

    <dl class="row">
        <div class="text-center">
            <img src="@Model.ImageUrl" class="img-fluid mb-4" alt="@Model.Model" style="height: 300px; object-fit: contain;" />
        </div>


        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StockQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StockQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsAvailable)
            {
                <span style="color:green; font-size: 1.2em;">✔ متوفر</span>
            }
            else
            {
                <span style="color:red; font-size: 1.2em;">✖ غير متوفر</span>
            }
        </dd>


    </dl>
</div>
<div>
    @if(User.IsInRole("User"))
    {
        <form asp-action="AddToCart" method="post" asp-controller="ShoppingCarts">
            <input type="hidden" name="mobileId" value="@Model.MobileId" />
            <button type="submit" class="btn btn-sm btn-outline-success mt-2">🛒 أضف إلى العربة</button>
        </form>
    }

       

    
   @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.MobileId">Edit</a> 
    }
    <a asp-action="Index">Back to List</a>
</div>
