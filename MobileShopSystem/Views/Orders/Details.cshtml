    </dl>

</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a>
    }
    <a asp-controller="Mobiles" asp-action="Index">Back to List</a>
</div>
