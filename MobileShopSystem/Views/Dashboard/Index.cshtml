@using MobileShopSystem.ViewModels
@model DashboardViewModel

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                Total Sales: @Model.TotalSales
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white shadow">
            <div class="card-body">
                Total Orders: @Model.TotalOrders
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                Total Products: @Model.TotalProducts
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                Pending Orders: @Model.PendingOrders
            </div>
        </div>
    </div>
</div>

